# 伺服器配置
SERVER_PORT=4040

# LINE Bot 配置
LINE_BOT_CHANNEL_TOKEN=your_line_bot_channel_token
LINE_BOT_CHANNEL_SECRET=your_line_bot_channel_secret

# MongoDB 配置
MONGODB_URI=mongodb://username:password@localhost:27017/linebot_translator?authSource=admin
MONGODB_DATABASE=linebot_translator

# OpenAI 配置
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL_NAME=gpt-4.1
# OpenAI 可用模型列表，使用逗號分隔
OPENAI_AVAILABLE_MODELS=gpt-4.1,o4-mini,o3-mini,o1-mini

# Gemini 配置
GEMINI_API_KEY=your_gemini_api_key
GEMINI_MODEL_NAME=gemini-2.0-flash-001
# Gemini 可用模型列表，使用逗號分隔
GEMINI_AVAILABLE_MODELS=gemini-2.0-flash,gemini-2.5-pro-preview-05-06

# Google Cloud Vision API 配置 (OCR)
# GOOGLE_CLOUD_VISION_API_KEY=your_google_cloud_vision_api_key
GOOGLE_APPLICATION_CREDENTIALS=./linebot.json

# 應用程式配置
OCR_ENABLED=true
AI_DEFAULT_PROVIDER=openai
APP_BROADCAST_TEST_MODE=false

# 管理員配置
ADMIN_USERS=your_admin_user_id

# MinIO 配置
MINIO_ENDPOINT=http://your_minio_endpoint:9000
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_BUCKET_NAME=line-bot

# 語言檢測配置
LANGUAGE_DETECTION_USE_AI=true
LANGUAGE_DETECTION_AI_PROVIDER=openai
LANGUAGE_DETECTION_DEFAULT_CHINESE=zh-tw
